<form class="form form-horizontal">
    {{#if reduce_leaks}}{{/if}}
    {{#if reduce_system_pressure}}
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4">Proposed reduced system pressure (psig)</label>
            <div class="input-group-sm col-sm-6">
                <input type="number" class="form-control" data-field="redsyspsi" value="{{redsyspsi}}">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4">Marginal Electric Rate</label>
            <div class="input-group-sm col-sm-6">
                <input type="number" class="form-control" data-field="elecrate" value="{{elecrate}}">
            </div>
        </div>
    {{/if}}
    {{#if reduce_open_blowing}}{{/if}}
    {{#if eliminate_inappropriate_usage}}{{/if}}
    {{#if reduce_runtime_standby_compressors}}{{/if}}
    {{#if install_vfd}}{{/if}}
    {{#if install_blower}}{{/if}}
    {{#if install_condensate_drains}}{{/if}}
    {{#if install_master_control}}{{/if}}
    {{#if replace_inlet_modulation}}{{/if}}
    {{#if recover_heat}}{{/if}}
    {{#if use_engineered_nozzles}}{{/if}}
</form>